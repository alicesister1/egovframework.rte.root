<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper   PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="EmpComplexResult">

<!-- 
	<typeAlias alias="empIncludesDeptVO" type="egovframework.rte.psl.dataaccess.vo.EmpIncludesDeptVO" />
	<typeAlias alias="deptIncludesEmpListVO" type="egovframework.rte.psl.dataaccess.vo.DeptIncludesEmpListVO" />
	<typeAlias alias="deptVO" type="egovframework.rte.psl.dataaccess.vo.DeptVO" />
	<typeAlias alias="empVO" type="egovframework.rte.psl.dataaccess.vo.EmpVO" />
	<typeAlias alias="empIncludesMgrVO" type="egovframework.rte.psl.dataaccess.vo.EmpIncludesMgrVO" />
	<typeAlias alias="empIncludesEmpListVO" type="egovframework.rte.psl.dataaccess.vo.EmpIncludesEmpListVO" />
 -->
	<!--
	<resultMap id="resultMapName" class="some.domain.Class" 
		[extends="parent-resultMap"] [groupBy="some property list"]>
		<result property="propertyName" column="COLUMN_NAME" 
			[columnIndex="1"] [javaType="int"] [jdbcType="NUMERIC"] [nullValue="-999999"]
			[select="someOtherStatement"] [resultMap="someOtherResultMap"]
			[typeHandler="com.mydomain.MyTypehandler"] />
		<result … />
		<result … />
		<result … />
	</resultMap>
	-->

	<resultMap id="empIncludesDeptResult" type="egovframework.rte.psl.dataaccess.vo.EmpIncludesDeptVO">
		<result property="empNo" column="EMP_NO" />
		<result property="empName" column="EMP_NAME" />
		<result property="job" column="JOB" />
		<result property="mgr" column="MGR" />
		<result property="hireDate" column="HIRE_DATE" />
		<result property="sal" column="SAL" />
		<result property="comm" column="COMM" jdbcType="BIGINT"/>
		<result property="deptNo" column="DEPT_NO" />

		<!--
			Emp-Dept 1:1 relation
			테스트 결과 resultMap 의 참조 시 sql-map-config.xml 의
			useStatementNamespaces="false" 와 상관없이 namespace prefix 를 써야 하는듯
		-->
		<association property="deptVO" resultMap="EmpComplexResult.getDeptResult" />
	</resultMap>

	<resultMap id="getDeptResult" type="egovframework.rte.psl.dataaccess.vo.DeptVO">
		<result property="deptNo" column="DEPT_NO" />
		<result property="deptName" column="DEPT_NAME" />
		<result property="loc" column="LOC" />
	</resultMap>
	
	<!-- 1:N 인 경우 groupBy 속성을 명시
	resultMap id="deptIncludesEmpListResult" type="egovframework.rte.psl.dataaccess.vo.DeptIncludesEmpListVO" groupBy="deptNo" -->
	<resultMap id="deptIncludesEmpListResult" type="egovframework.rte.psl.dataaccess.vo.DeptIncludesEmpListVO" >
		<result property="deptNo" column="DEPT_NO" />
		<result property="deptName" column="DEPT_NAME" />
		<result property="loc" column="LOC" />
		
		<!-- Dept-EmpList 1:N relation -->
		<association property="empVOList" resultMap="EmpComplexResult.getEmpResult" />
	</resultMap>
	
	<resultMap id="getEmpResult" type="egovframework.rte.psl.dataaccess.vo.EmpVO">
		<result property="empNo" column="EMP_NO" />
		<result property="empName" column="EMP_NAME" />
		<result property="job" column="JOB" />
		<result property="mgr" column="MGR" />
		<result property="hireDate" column="HIRE_DATE" />
		<result property="sal" column="SAL" />
		<result property="comm" column="COMM" jdbcType="NUMERIC"/>
		<result property="deptNo" column="DEPT_NO" />
	</resultMap>
	
	<!-- 1:N 인 경우 N+1 select 형태 - 비추천 -->
	<resultMap id="deptIncludesEmpListUsingSelectAttrResult" type="egovframework.rte.psl.dataaccess.vo.DeptIncludesEmpListVO">
		<result property="deptNo" column="DEPT_NO" />
		<result property="deptName" column="DEPT_NAME" />
		<result property="loc" column="LOC" />
		
		<!-- Dept-EmpList 1:N relation using select attribute -->
		<collection property="empVOList" column="DEPT_NO" select="selectEmpList" />
	</resultMap>
	
	<!-- Hierarchical relation 인 경우 ibatis resultMap select 에 의한 처리 예 -->
	<resultMap id="empIncludesMgrResult" type="egovframework.rte.psl.dataaccess.vo.EmpIncludesMgrVO" extends="getEmpResult">
		<collection property="mgrVO" column="MGR" select="selectMgrHierarchy2" />
	</resultMap>
	
	<!-- Composite Key 인 경우 ibatis resultMap select 에 의한 처리 예 -->
	<resultMap id="empIncludesSameMgrMoreSalaryEmpListResult" type="egovframework.rte.psl.dataaccess.vo.EmpIncludesEmpListVO" extends="getEmpResult">
		<collection property="empList" column="{empNo=EMP_NO, mgr=MGR, sal=SAL}" select="selectSameMgrMoreSalaryEmpList" />
	</resultMap>

	<select id="selectEmpIncludesDeptResultUsingResultMap" parameterType="egovframework.rte.psl.dataaccess.vo.EmpVO" resultMap="empIncludesDeptResult">
		<![CDATA[
			select EMP_NO,
			       EMP_NAME,
			       JOB,
			       MGR,
			       HIRE_DATE,
			       SAL,
			       COMM,
			       A.DEPT_NO as DEPT_NO,
			       B.DEPT_NAME,
			       B.LOC
			from   EMP A, DEPT B
			where  A.DEPT_NO = B.DEPT_NO
			and    EMP_NO = #{empNo}
		]]>
	</select>
	
	<select id="selectDeptIncludesEmpListResultUsingResultMap" parameterType="egovframework.rte.psl.dataaccess.vo.DeptVO" resultMap="deptIncludesEmpListResult">
		<![CDATA[
			select   A.DEPT_NO as DEPT_NO,
			         DEPT_NAME,
			         LOC,
			         EMP_NO,
			         EMP_NAME,
			         JOB,
			         MGR,
			         HIRE_DATE,
			         SAL,
			         COMM
			from     DEPT A,
			         EMP B
			where    A.DEPT_NO = B.DEPT_NO
			         and A.DEPT_NO = #{deptNo}
			order by B.EMP_NO
		]]>
	</select>
	
	<select id="selectDeptIncludesEmpListResultListUsingResultMap" parameterType="egovframework.rte.psl.dataaccess.vo.DeptVO" resultMap="deptIncludesEmpListResult">
		<![CDATA[
			select   A.DEPT_NO as DEPT_NO,
			         DEPT_NAME,
			         LOC,
			         EMP_NO,
			         EMP_NAME,
			         JOB,
			         MGR,
			         HIRE_DATE,
			         SAL,
			         COMM
			from     DEPT A
			         left outer join EMP B
			           on (A.DEPT_NO = B.DEPT_NO)
			where    A.DEPT_NAME like '%'||#{deptName}||'%'
			order by A.DEPT_NO,
			         B.EMP_NO
		]]>
	</select>
	
	<select id="selectDeptIncludesEmpListResultListUsingResultMapMysql" parameterType="egovframework.rte.psl.dataaccess.vo.DeptVO" resultMap="deptIncludesEmpListResult">
		<![CDATA[
			select   A.DEPT_NO as DEPT_NO,
			         DEPT_NAME,
			         LOC,
			         EMP_NO,
			         EMP_NAME,
			         JOB,
			         MGR,
			         HIRE_DATE,
			         SAL,
			         COMM
			from     DEPT A
			         left outer join EMP B
			           on (A.DEPT_NO = B.DEPT_NO)
			where    A.DEPT_NAME like concat('%', #{deptName}, '%')
			order by A.DEPT_NO,
			         B.EMP_NO
		]]>
	</select>
	
	<select id="selectDeptIncludesEmpListResultListUsingRepetitionSelect" parameterType="egovframework.rte.psl.dataaccess.vo.DeptVO" resultMap="deptIncludesEmpListUsingSelectAttrResult">
		<![CDATA[
			select   DEPT_NO,
			         DEPT_NAME,
			         LOC
			from     DEPT
			where    DEPT_NAME like '%'||#{deptName}||'%'
			order by DEPT_NO
		]]>
	</select>
	
	<select id="selectDeptIncludesEmpListResultListUsingRepetitionSelectMysql" parameterType="egovframework.rte.psl.dataaccess.vo.DeptVO" resultMap="deptIncludesEmpListUsingSelectAttrResult">
		<![CDATA[
			select   DEPT_NO,
			         DEPT_NAME,
			         LOC
			from     DEPT
			where    DEPT_NAME like concat('%', #{deptName], '%')
			order by DEPT_NO
		]]>
	</select>
	
	<select id="selectEmpList" parameterType="decimal" resultMap="getEmpResult">
		<![CDATA[
			select   EMP_NO,
			         EMP_NAME,
			         JOB,
			         MGR,
			         HIRE_DATE,
			         SAL,
			         COMM,
			         DEPT_NO
			from     EMP
			where    DEPT_NO = #{deptNo}
			order by EMP_NO
		]]>
	</select>
	
	<!--
	<select id="selectEmpWithMgr" parameterClass="empVO" resultMap="empIncludesMgrResult">
		<![CDATA[
			select   EMP_NO,
			         EMP_NAME,
			         JOB,
			         MGR,
			         HIRE_DATE,
			         SAL,
			         COMM,
			         DEPT_NO
			from     EMP
			where    EMP_NO = #empNo#
		]]>
	</select>
	
	<select id="selectMgrHierarchy" parameterClass="decimal" resultMap="empIncludesMgrResult">
		<![CDATA[
			select   EMP_NO,
			         EMP_NAME,
			         JOB,
			         MGR,
			         HIRE_DATE,
			         SAL,
			         COMM,
			         DEPT_NO
			from     EMP
			where    EMP_NO = #mgr#
		]]>
	</select>
	-->
	<!-- 하나의 쿼리를 사용하여 empNo, mgr 속성의 유무에 따라 Hierarchy 반복조회로도 사용토록 변경
		 parameterClass 는 최초 조회와 resultMap 의 select 조회의 경우 empVO 와 decimal 로 다르기 때문에
		 따로 명시하지 않고 자동 reflection 에 의해 처리토록 함
	 -->
	<select id="selectMgrHierarchy" resultMap="empIncludesMgrResult">
		<![CDATA[
			select   EMP_NO,
			         EMP_NAME,
			         JOB,
			         MGR,
			         HIRE_DATE,
			         SAL,
			         COMM,
			         DEPT_NO
			from     EMP
			where    1=1 and
		]]>
			EMP_NO = #{empNo}
	</select>
	<select id="selectMgrHierarchy2" resultMap="empIncludesMgrResult">
		<![CDATA[
			select   EMP_NO,
			         EMP_NAME,
			         JOB,
			         MGR,
			         HIRE_DATE,
			         SAL,
			         COMM,
			         DEPT_NO
			from     EMP
			where    1=1 and
		]]>
			EMP_NO = #{mgr}
	</select>
	<select id="selectEmpIncludesSameMgrMoreSalaryEmpList" parameterType="egovframework.rte.psl.dataaccess.vo.EmpVO" resultMap="empIncludesSameMgrMoreSalaryEmpListResult">
		<![CDATA[
			select   EMP_NO,
			         EMP_NAME,
			         JOB,
			         MGR,
			         HIRE_DATE,
			         SAL,
			         COMM,
			         DEPT_NO
			from     EMP
			where    EMP_NO = #{empNo}
		]]>
	</select>
	
	<select id="selectSameMgrMoreSalaryEmpList" resultMap="getEmpResult">
		<![CDATA[
			select   EMP_NO,
			         EMP_NAME,
			         JOB,
			         MGR,
			         HIRE_DATE,
			         SAL,
			         COMM,
			         DEPT_NO
			from     EMP
			where    MGR = #{mgr}		/* 같은 관리자에 속해 있으면서 */
			and      SAL >= #{sal}		/* 본인 급여 이상을 받는 사람 */
			and      EMP_NO <> #{empNo}  /* 본인은 제외 */
			order by SAL desc
		]]>
	</select>

</mapper>
