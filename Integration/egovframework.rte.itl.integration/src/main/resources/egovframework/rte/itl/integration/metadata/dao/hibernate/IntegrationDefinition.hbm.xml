<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
      "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="egovframework.rte.itl.integration.metadata">

    <class name="IntegrationDefinition" table="INTEGRATION">

        <id name="id" type="string" column="INTEGRATION_ID"/>
        
        <natural-id>
	        <many-to-one name="provider"
	                     class="ServiceDefinition"
	                     column="PROVIDER_SERVICE_KEY"
	                     not-null="true"
	                     lazy="false"/>
	
	        <many-to-one name="consumer"
	                     class="SystemDefinition"
	                     column="CONSUMER_SYSTEM_KEY"
	                     not-null="true"
	                     lazy="false"/>
        </natural-id>
        
        <property name="defaultTimeout"
                  type="long"
                  column="DEFAULT_TIMEOUT"
                  not-null="true"/>
                  
        <property name="using"
                  type="yes_no"
                  column="USING_YN"
                  not-null="true"/>
        
        <property name="validateFrom"
                  type="calendar"
                  column="VALIDATE_FROM"
                  not-null="false"/>
        
        <property name="validateTo"
                  type="calendar"
                  column="VALIDATE_TO"
                  not-null="false"/>
        
    </class>
    
</hibernate-mapping>